
#import "RestGoatee-Core.pch"
#import <XCTest/XCTest.h>

#define CLASS_SPEC(className) \
FILE_START \
@interface className ## Spec : XCTestCase @end \
@implementation className ## Spec

#define CATEGORY_SPEC(className, categoryName) \
FILE_START \
@interface className ## categoryName ## Spec : XCTestCase @end \
@implementation className ## categoryName ## Spec

#define SPEC_END @end \
FILE_END

static inline NSString* randomStringOfLength(const size_t length) {
    static const char* characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
    static const size_t charactersLength = 2 * 26 + 10;
    char* inputBuffer = malloc(length * sizeof(char));
    for (size_t i = 0; i < length; i++) {
        inputBuffer[i] = characters[arc4random_uniform(charactersLength)];
    }
    return [[NSString alloc] initWithBytesNoCopy:inputBuffer length:length encoding:NSUTF8StringEncoding freeWhenDone:YES];
}
